package com.hu.controllers;

import java.util.List;

import javax.servlet.http.Cookie;
import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;

import com.hu.dao.CourseDao;
import com.hu.dao.InstructorDao;
import com.hu.entity.Course;

@Controller
public class HomeController {
	@Autowired
	private CourseDao courseDao;
	
	@Autowired
	private InstructorDao instructorDao;

	
	@GetMapping("/")
	public String showHome() {
		return "home";
	}
	
	@GetMapping("/instructors")
	public String showInstructorsHome(Model theModel, HttpServletRequest request) {
		Cookie[] arr = request.getCookies();
		String userName = null;
		for(Cookie c : arr)
			if(c.getName().equals("username"))
				userName = c.getValue();
		List<Course> theCourses = courseDao.getCourses(instructorDao.findInstructorByUserName(userName)) ;
		theModel.addAttribute("courses", theCourses);
		return "instructors-home";
	}
	
	@GetMapping("/showFormForAddCourseForInstructor")
	public String showFormForAddCourseForInstructors() {
		
	}
	
	@GetMapping("/students")
	public String showStudentsHome() {
		return "students-home";
	}
	
}
