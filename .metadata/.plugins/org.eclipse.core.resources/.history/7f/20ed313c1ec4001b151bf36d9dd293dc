package com.hu.controllers;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.hu.dao.CourseDao;
import com.hu.entity.Course;

@Controller
@RequestMapping("/students")
public class StudentController {
	
	@Autowired
	private CourseDao courseDao;
	
	@GetMapping("/")
	public String showStudentsHome(Model theModel) {
			List<Course> allCourses = courseDao.searchCourses(null);
			theModel.addAttribute("courses", allCourses);
		return "students-home";
	}
	
	@GetMapping("/search")
	public String 
}
