package com.hu.controllers;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

import com.hu.dao.CourseDao;
import com.hu.dao.InstructorDao;
import com.hu.entity.Course;

@Controller
public class HomeController {
	@Autowired
	private CourseDao courseDao;
	
	@Autowired
	InstructorDao instructorDao;

	
	@GetMapping("/")
	public String showHome() {
		return "home";
	}
	
	@GetMapping("/instructors")
	public String showInstructorsHome(Model theModel, @ModelAttribute("username") String username) {
		List<Course> theCourses = courseDao.getCourses(null) ;
		theModel.addAttribute("courses", theCourses);
		return "instructors-home";
	}
	
	@GetMapping("/students")
	public String showStudentsHome() {
		return "students-home";
	}
	
}
